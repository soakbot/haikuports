SUMMARY="bzflag"
DESCRIPTION="bzflag is a 3D tank combat simulator game. \
This game utilizes OpenGL graphics to create the 3D tank \
graphics to capture flags and blow stuff up." 
HOMEPAGE="http://www.bzflag.org/" 
SRC_URI="http://softlayer-dal.dl.sourceforge.net/project/bzflag/bzflag source/2.4.2/bzflag-2.4.2.tar.bz2"
SOURCE_DIR="bzflag-2.4.2"
REVISION="2"
CHECKSUM_SHA256="4f7bc52284cc4b39fc352855e555b2b064c1de6a18f7474e249073070762c811"
LICENSE="GNU LGPL v2.1"
COPYRIGHT="1993-2010 Tim Riker"
ARCHITECTURES="x86 x86_gcc2"

PROVIDES="
	bzflag = $portVersion
	app:bzflag= $portVersion
	"
 
REQUIRES="
	haiku
	lib:libsdl
	lib:libsdl_mixer
        "
 
BUILD_REQUIRES="
	haiku_devel
	devel:libsdl
	devel:libsdl_mixer
        "

BUILD_PREREQUIRES="
	cmd:make
	cmd:gcc
	cmd:libtoolize
	cmd:aclocal
	cmd:automake
	cmd:autoconf
"

BUILD()
{
	mkdir -p m4
#	libtoolize --force --copy --install
#	aclocal
#	automake
